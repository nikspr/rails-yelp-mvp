

<div class="container">
  <h1 class="mt-4">Write a Review for <%=@restaurant.name %></h1>

  <%= simple_form_for([@restaurant, @review], html: { class: "mt-4" }) do |f| %>
    <div class="form-group">
        <%= f.input :rating, collection: 1..5, prompt: 'Select a rating' %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary my-3 me-2" %>
    <%= link_to "Cancel", restaurant_path(@restaurant), class: "btn btn-secondary" %>
  <% end %>
</div>
